@model HoneyDo.Models.ToDoItem
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HoneyDo</title>
    <link href="~/css/site.css" rel="stylesheet" type="text/css">
</head>

<body>
    <nav>
        <div class="container">
            <a asp-action="HomeIndex" asp-controller="Home">HoneyDo</a>
            <a asp-action="GettingStarted" asp-controller="Learning">Getting Started</a>
            <a class="currentPage" asp-action="Index" asp-controller="ToDoList">To Do List</a>
            <a asp-action="HiveDisplayer" asp-controller="Hive">My Hives</a>
        </div>
    </nav>
    <h1 class="MainHead">To Do List</h1>
    <h3 class="MainHead">Add an Item To Your To-Do List:</h3>
    <br />
    <br />

    <a asp-action="List" asp-controller="ToDoList">View Entire To-Do List</a><br />
    <a asp-action="Add" asp-controller="ToDoList">Add Item to To-Do List</a><br />
    <a asp-action="Remove" asp-controller="ToDoList">Remove Item From To-Do List</a><br />
    <a asp-action="Edit" asp-controller="ToDoList">Edit Item in To-Do List</a>
    <br /><br />


    @using (Html.BeginForm())
    {
        @Html.EditorForModel()
        <input type="submit" value="Add Item" />
    }




</body>
</html>