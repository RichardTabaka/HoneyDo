@using ASPPart2.Models;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HoneyDo</title>
    <link href="~/css/site.css" rel="stylesheet" type="text/css">
</head>

<body>
    <nav>
        <div class="container">
            <a asp-action="HomeIndex" asp-controller="Home">HoneyDo</a>
            <a class="currentPage" asp-action="GettingStarted" asp-controller="Learning">Getting Started</a>
            <a asp-action="Index" asp-controller="ToDoList">To Do List</a>
        </div>
    </nav>
    <h1 class="MainHead">Getting Started</h1>
    <h3 class="MainHead">Helpful Links and Tips for Beginners</h3>
    <br />
    <br />
    <p>Helpful Links:</p>
    @{ 
        // Create Link objects for Link List
        Link BKN = new Link();
        BKN.link = "https://www.beekeepingfornewbies.com/beekeeping-hobby/";
        BKN.linkName = "BeeKeeping For Newbies";
        Link Spruce = new Link();
        Spruce.link = "https://www.thespruce.com/beekeeping-for-beginners-step-by-step-3016540";
        Spruce.linkName = "The Spruce";
        Link DB = new Link();
        DB.link = "https://www.dustinbajer.com/beekeeping-tips/";
        DB.linkName = "DustinBajer.com";

        // Add all links to a list for easy iteration in page building
        List<Link> HelpfulLinks = new List<Link>();
        HelpfulLinks.Add(BKN);
        HelpfulLinks.Add(Spruce);
        HelpfulLinks.Add(DB);

        foreach(Link link in HelpfulLinks)
        {
            <a href="@link.link">@link.linkName</a> <br />
        }
    }
</body>
</html>
